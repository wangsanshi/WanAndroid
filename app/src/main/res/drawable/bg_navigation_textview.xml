<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/colorAccentTranslucent">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="25dp" />
            <solid android:color="#EAE8E8" />
            <padding android:bottom="5dp" android:left="15dp" android:right="15dp" android:top="5dp" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="25dp" />
            <solid android:color="#F5F5F5" />
            <padding android:bottom="5dp" android:left="15dp" android:right="15dp" android:top="5dp" />
        </shape>
    </item>
</selector>